<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vatsal.ororide.HomeActivity">

    <TextView
        android:id="@+id/txtcity"
        android:text="SELECT YOUR CURRENT CITY"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TableLayout android:id="@+id/tablecity"
        android:layout_width="fill_parent"
        android:layout_below="@+id/txtcity"
        android:layout_marginTop="10dp"
        android:layout_height="300dp" >


        <TableRow>
            <ImageView
                android:src="@mipmap/ic_launcher1"
                android:layout_height="140dp"
                android:layout_width="160dp"
                android:id="@+id/imgahm"
                />

            <ImageView
                android:src="@mipmap/ic_launcher2"
                android:layout_height="140dp"
                android:layout_width="160dp"
                android:id="@+id/imgraj"
                />

            <TextView
                android:layout_width="20dp"
                />


        </TableRow>

        <TextView
            android:layout_height="5dp"/>

        <TableRow>
            <ImageView
                android:src="@mipmap/ic_launcher3"
                android:layout_height="140dp"
                android:layout_width="160dp"
                android:id="@+id/imgsur"
                />


            <ImageView
                android:src="@mipmap/ic_launcher4"
                android:layout_height="140dp"
                android:layout_width="160dp"
                android:id="@+id/imgvad"
                />

            <TextView
                android:layout_width="20dp"
                />

        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/txtsrc"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="CHOOSE YOUR CURRENT LOCATION"
        android:layout_below="@+id/tablecity"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#000000"
        />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:id="@+id/spin1"
        android:spinnerMode="dropdown"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtsrc"></Spinner>


</RelativeLayout>
