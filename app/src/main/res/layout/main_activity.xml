<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/l1"
    android:background="#ffffff">

    <TextView
        android:id="@+id/txtlog"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:textSize="30dp"
        android:textColor="#f44336"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="83dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:textStyle="bold"
        android:id="@+id/txtuser"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtlog"
        />


    <EditText android:id="@+id/eduser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@+id/txtuser"
        android:layout_marginTop="1dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textStyle="bold"
        android:id="@+id/txtpass"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/eduser"
        />

    <EditText android:id="@+id/edpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtpass"
        android:layout_marginTop="1dp"
        android:padding="10dp"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btlog"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/edpass"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtlink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOT REGISTERED?? SIGN UP HERE"
        android:gravity="center"
        android:layout_below="@+id/btlog"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#2196f3"
        />

</RelativeLayout>
